<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    http://wowprogramming.com/FrameXML/UI.xsd">
    <Button name="ShieldHealthFrame" parent="UIParent" enableMouse="true" movable="true" frameStrata="LOW">
        <Size x="100" y="50"/>
        <Anchors>
            <Anchor point="CENTER">
                <Offset x="0" y="0"/>
            </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="6" top="6" bottom="5"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" font="Interface/AddOns/ShieldHealth/fonts/AvrileSans-Regular.ttf" justifyH="CENTER" setAllPoints="true" text="shieldHealth">
					<FontHeight val="10"/>
				</FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
				ShieldHealthDebuff_UpdateText()
                ShieldHealth_OnLoad(self)
            </OnLoad>
            <OnEvent>
                ShieldHealth_OnEvent(self, event, ...)
            </OnEvent>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Button>
</Ui>
